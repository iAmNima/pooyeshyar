rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Tickets collection
    match /tickets/{ticketId} {
      allow read, write: if request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'company' && resource.data.companyId == request.auth.uid));
    }
    // Messages subcollection
    match /tickets/{ticketId}/messages/{messageId} {
      allow read, write: if request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'company' && get(/databases/$(database)/documents/tickets/$(ticketId)).data.companyId == request.auth.uid));
    }
  }
}